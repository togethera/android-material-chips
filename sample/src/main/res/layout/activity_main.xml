            app:cv_color="#00f"
            app:cv_color_clicked="#721"
            app:cv_text_color="#199"
            app:cv_text_color_clicked="#180"
            app:cv_icon_placeholder="@drawable/ic_bug_report_24dp"
            app:cv_icon_delete="@drawable/ic_close_24dp"
